[global]
    follow = mouse
    geometry = "320x4-0+22"
    padding = 8
    horizontal_padding = 8
    font = Monospace 9
    markup = full
    format = "<b>%s %p</b>\n%b"
    show_age_threshold = 1m
    word_wrap = true
    dmenu = rofi -dmenu -p dunst

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+numbersign
    context = ctrl+shift+period

