# Colors
set default-fg              "#ffffff"

## Bars
set statusbar-bg            "#2d2d2d"
set statusbar-fg            "#f2f0ec"
set inputbar-bg             "#393939"
set inputbar-fg             "#f2f0ec"

## Highlight
set highlight-color         "#ffcc66"
set highlight-active-color  "#6699cc"

## Completion
set completion-bg           "#393939"
set completion-fg           "#f2f0ec"
set completion-group-bg     "#2d2d2d"
set completion-group-fg     "#f2f0ec"
set completion-highlight-bg "#6699cc"
set completion-highlight-fg "#2d2d2d"

## Notification
set notification-bg         "#393939"
set notification-fg         "#f2f0ec"
set notification-warning-bg "#ffcc66"
set notification-warning-fg "#2d2d2d"
set notification-error-bg   "#f2777a"
set notification-error-fg   "#2d2d2d"

## Index
set index-bg                "#393939"
set index-fg                "#f2f0ec"
set index-active-bg         "#6699cc"
set index-active-fg         "#2d2d2d"

# Miscellaneous
set font "Source Code Pro 9"
set selection-clipboard clipboard
set window-title-home-tilde true
set statusbar-basename true
set adjust-open "width"
