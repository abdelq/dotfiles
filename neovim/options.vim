" Moving around, searching and patterns
set ignorecase

" Displaying text
set lazyredraw
set list
set number
set relativenumber

" Syntax, highlighting and spelling
set background=dark
set cursorline

" Multiple windows
set splitbelow
set splitright

" Terminal
set title

" Tabs and indenting
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set smartindent

" Folding
set nofoldenable
