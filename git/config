[column]
	status = auto
	tag = auto dense

[commit]
	verbose = true

[diff]
	algorithm = histogram
	colorMoved = true
	renames = copies
	tool = vimdiff

[difftool]
	prompt = false

[difftool "vimdiff"]
	path = nvim

[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f

[include]
	path = alias
	path = url
	path = user

[merge]
	tool = vimdiff

[mergetool]
	prompt = false

[mergetool "vimdiff"]
	path = nvim

[pretty]
	fzf = %C(auto)%h %s %C(cyan)%cr
	simple = %C(auto)%h %<(72,trunc)%s %C(blue)%aN%C(reset) %C(green)%cr%C(red)%d

[pull]
	rebase = preserve

[rebase]
	abbreviateCommands = true
	missingCommitsCheck = error

[submodule]
	recurse = true

[tag]
	sort = version:refname

[transfer]
	fsckObjects = true

[versionsort]
	suffix = -alpha
	suffix = -beta
	suffix = -rc

# vim: filetype=gitconfig
