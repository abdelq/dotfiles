[column]
	status = auto
	tag = auto dense

[commit]
	verbose = true

[diff]
	algorithm = histogram
	colorMoved = true
	renames = copies

[include]
	path = alias
	path = url
	path = user

[pretty]
	simple = %C(bold yellow)%h %C(auto)%<(72,trunc)%s%C(blue) %aN%C(green) %ar%C(red)%d

[pull]
	rebase = preserve

[rebase]
	abbreviateCommands = true
	missingCommitsCheck = error

[tag]
	sort = version:refname

[transfer]
	fsckObjects = true

[versionsort]
	suffix = -alpha
	suffix = -beta
	suffix = -rc
