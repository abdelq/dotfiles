[column]
	status = auto
	tag = auto dense

[commit]
	verbose = true

[diff]
	algorithm = histogram
	colorMoved = true
	renames = copies
	tool = vimdiff

[difftool]
	prompt = false

[difftool "vimdiff"]
	path = nvim

[include]
	path = alias
	path = url
	path = user

[merge]
	tool = vimdiff

[mergetool]
	prompt = false

[mergetool "vimdiff"]
	path = nvim

[pretty]
	simple = %C(bold yellow)%h %C(auto)%<(72,trunc)%s%C(blue) %aN%C(green) %ar%C(red)%d

[pull]
	rebase = preserve

[rebase]
	abbreviateCommands = true
	missingCommitsCheck = error

[submodule]
	recurse = true

[tag]
	sort = version:refname

[transfer]
	fsckObjects = true

[versionsort]
	suffix = -alpha
	suffix = -beta
	suffix = -rc

