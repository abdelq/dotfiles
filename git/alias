[alias] ; Common commands
	br = branch
	ci = commit
	cl = clone
	co = checkout
	cp = cherry-pick
	df = diff
	fc = fetch
	lg = log
	mg = merge
	pl = pull
	ps = push
	rb = rebase
	rs = reset
	rt = remote
	sh = show
	sm = submodule
	ss = stash
	st = status

[alias] ; Common subcommands
	rta = remote add
	rtu = remote set-url
	sma = submodule add
	ssp = stash pop

[alias] ; Common options
	cia = commit --amend
	cim = commit --message
	cob = checkout -b
	dfc = diff --cached
	lgf = log --follow
	lgs = log --pretty=simple --decorate-refs=heads
	psf = push --force-with-lease
	pst = push --tags
	psu = push --set-upstream
	rbi = rebase --interactive
	rss = reset --soft
	rsh = reset --hard
	rtv = remote --verbose

[alias] ; Miscellaneous
	amend = commit --amend
	discard = checkout --
	last = log --max-count 1
	undo = reset --soft HEAD^
	unstage = reset HEAD

# vim: filetype=gitconfig
